<!--components/v-button/index.wxml-->
<button 
  class="v-button {{type}} {{size}} {{plain ? 'plain' : ''}} {{round ? 'round' : ''}} {{disabled ? 'disabled' : ''}} {{loading ? 'loading' : ''}} {{customClass}}"
  disabled="{{disabled || loading}}"
  bindtap="handleClick"
>
  <!-- 加载中图标 -->
  <view wx:if="{{loading}}" class="loading-icon">
    <view class="loading-spinner"></view>
  </view>
  
  <!-- 按钮文本 -->
  <text class="button-text">{{text}}</text>
  
  <!-- 插槽内容 -->
  <slot></slot>
</button> 