.v-button {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  border: 2rpx solid transparent;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
  overflow: hidden;
  box-sizing: border-box;
}

.v-button::after {
  display: none;
}

/* 默认样式 */
.v-button.default {
  background-color: #fff;
  color: #333;
  border-color: #ddd;
}

.v-button.default:not(.disabled):not(.loading):active {
  background-color: #f5f5f5;
}

/* 主要按钮 */
.v-button.primary {
  background-color: #1989fa;
  color: #fff;
  border-color: #1989fa;
}

.v-button.primary:not(.disabled):not(.loading):active {
  background-color: #0570d9;
}

/* 成功按钮 */
.v-button.success {
  background-color: #07c160;
  color: #fff;
  border-color: #07c160;
}

.v-button.success:not(.disabled):not(.loading):active {
  background-color: #059a4f;
}

/* 警告按钮 */
.v-button.warning {
  background-color: #ff976a;
  color: #fff;
  border-color: #ff976a;
}

.v-button.warning:not(.disabled):not(.loading):active {
  background-color: #f2711c;
}

/* 危险按钮 */
.v-button.danger {
  background-color: #ee0a24;
  color: #fff;
  border-color: #ee0a24;
}

.v-button.danger:not(.disabled):not(.loading):active {
  background-color: #c8001a;
}

/* 按钮大小 */
.v-button.small {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border-radius: 6rpx;
}

.v-button.medium {
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.v-button.large {
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  border-radius: 10rpx;
}

/* 朴素按钮 */
.v-button.plain {
  background-color: transparent !important;
}

.v-button.default.plain {
  color: #333;
  border-color: #ddd;
}

.v-button.primary.plain {
  color: #1989fa;
  border-color: #1989fa;
}

.v-button.success.plain {
  color: #07c160;
  border-color: #07c160;
}

.v-button.warning.plain {
  color: #ff976a;
  border-color: #ff976a;
}

.v-button.danger.plain {
  color: #ee0a24;
  border-color: #ee0a24;
}

/* 圆形按钮 */
.v-button.round {
  border-radius: 50rpx;
}

/* 禁用状态 */
.v-button.disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* 加载状态 */
.v-button.loading {
  opacity: 0.7;
  cursor: not-allowed;
}

.loading-icon {
  margin-right: 8rpx;
}

.loading-spinner {
  width: 24rpx;
  height: 24rpx;
  border: 3rpx solid currentColor;
  border-top-color: transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.button-text {
  font-size: inherit;
  line-height: inherit;
} 